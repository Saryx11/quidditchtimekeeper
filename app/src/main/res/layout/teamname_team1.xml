<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/change_teamname1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:visibility="gone"
    android:tag="bottomslider"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/buttons_teamname1"
            android:orientation="horizontal">

            <!--<RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>-->
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_margin="5dp"
                android:text="@string/Back"
                android:onClick="slideDownTeamName1" />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_margin="5dp"
                android:text="@string/OK"
                android:onClick="slideDownTeamName1_OK" />
            <!--<RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>-->
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/buttons_teamname1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/top_things_team_1">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:id="@+id/origin_things_team_1">
                            <TextView
                                android:id="@+id/originTeam1_header"
                                android:text="Origin"
                                android:textColor="@color/textColor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"/>
                            <EditText
                                android:id="@+id/originTeam1"
                                android:layout_alignParentStart="true"
                                android:layout_below="@+id/originTeam1_header"
                                android:textColor="@color/textColor"
                                android:imeOptions="actionDone"
                                android:maxLines="1"
                                android:inputType="text"
                                android:hint="@string/example_origin1"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:gravity="start"
                                android:minWidth="120dp"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/icon_swap_team1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:visibility="visible">
                            <android.support.design.widget.FloatingActionButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:fabSize="mini"
                                android:layout_margin="10dp"
                                android:clickable="true"
                                android:scaleType="center"
                                android:layout_centerInParent="true"
                                app:backgroundTint="@color/white"
                                android:src="@drawable/ic_swap_horiz"
                                android:id="@+id/swapFAB"
                                android:onClick="swapNamesTeam1"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:id="@+id/additional_names_things_team_1">
                            <TextView
                                android:id="@+id/additionalNameTeam1_header"
                                android:text="Additional Names"
                                android:textColor="@color/textColor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentTop="true"/>
                            <EditText
                                android:id="@+id/additionalNameTeam1"
                                android:layout_alignParentEnd="true"
                                android:layout_below="@+id/additionalNameTeam1_header"
                                android:textColor="@color/textColor"
                                android:imeOptions="actionDone"
                                android:maxLines="1"
                                android:inputType="text"
                                android:hint="@string/example_additionalnames1"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:gravity="end"
                                android:minWidth="120dp"/>
                        </RelativeLayout>
