                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:id="@+id/playerinfo_wrapper"
                        android:layout_below="@+id/jerseycolor_wrapper">
                        <TextView
                            android:id="@+id/playerinfo_header"
                            android:text="Player information"
                            android:textColor="@color/textColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/playerinfo_header">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="50dp"
                                        android:layout_alignParentStart="true"
                                        android:text="1."
                                        android:id="@+id/playerinfo_enumerate"
                                        android:textSize="20sp"
                                        android:gravity="center"/>
                                    <EditText
                                        android:id="@+id/playerinfo_number"
                                        android:textColor="@color/textColor"
                                        android:imeOptions="actionDone"
                                        android:layout_toEndOf="@+id/playerinfo_enumerate"
                                        android:maxLines="1"
                                        android:inputType="text"
                                        android:hint="#"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:gravity="center"/>
                                    <EditText
                                        android:id="@+id/playerinfo_name"
                                        android:textColor="@color/textColor"
                                        android:imeOptions="actionDone"
                                        android:layout_toEndOf="@+id/playerinfo_number"
                                        android:maxLines="1"
                                        android:inputType="text"
                                        android:hint="Player name"
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp"
                                        android:gravity="start"/>
                                </RelativeLayout>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="This list needs to be extended..."/>
