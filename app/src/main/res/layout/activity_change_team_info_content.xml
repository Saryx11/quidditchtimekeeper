                                    android:id="@+id/pickpurple"
                                    android:layout_width="@dimen/colorfield_width"
                                    android:layout_height="@dimen/colorfield_height"
                                    android:src="@drawable/ic_shirt_purple"
                                    android:visibility="visible"
                                    android:onClick="selectColor"
                                    android:tag="purple"/>
                                <ImageView
