                                    android:layout_width="@dimen/colorfield_width"
                                    android:layout_height="@dimen/colorfield_height"
                                    android:src="@drawable/ic_shirt_darkpurple"
                                    android:visibility="visible"
                                    android:onClick="selectColor"
                                    android:tag="darkpurple"/>
                                <ImageView
                                    android:id="@+id/pickdarkpurpletick"
                                    android:layout_width="@dimen/colorfield_width"
                                    android:layout_height="@dimen/colorfield_height"
                                    android:src="@drawable/ic_tick_white"
                                    android:visibility="invisible"
