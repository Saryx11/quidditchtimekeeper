                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:layout_row="0">
                                <ImageView
                                    android:id="@+id/pickwhite"
                                    android:layout_width="@dimen/colorfield_width"
                                    android:layout_height="@dimen/colorfield_height"
                                    android:src="@drawable/ic_shirt_white"
                                    android:visibility="visible"
                                    android:onClick="selectColor"
                                    android:tag="white"/>
                                <ImageView
                                    android:id="@+id/pickwhitetick"
                                    android:layout_width="@dimen/colorfield_width"
                                    android:layout_height="@dimen/colorfield_height"
                                    android:src="@drawable/ic_tick_black"
                                    android:visibility="invisible"
                                    android:padding="12dp"
                                    android:tag="selectJerseyColor"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_row="0">
                                <ImageView
                                    android:id="@+id/pickblack"
                                    android:layout_width="@dimen/colorfield_width"
                                    android:layout_height="@dimen/colorfield_height"
                                    android:src="@drawable/ic_shirt_black"
                                    android:visibility="visible"
                                    android:onClick="selectColor"
                                    android:tag="black"/>
                                <ImageView
                                    android:id="@+id/pickblacktick"
                                    android:layout_width="@dimen/colorfield_width"
                                    android:layout_height="@dimen/colorfield_height"
                                    android:src="@drawable/ic_tick_white"
                                    android:visibility="invisible"
                                    android:padding="12dp"
                                    android:tag="selectJerseyColor"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="2"
                                android:layout_row="0">
