<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="@dimen/teamchoice_list_item_margin"
        android:layout_height="@dimen/teamchoice_list_item_height"
        android:layout_alignParentStart="true"
        android:id="@+id/list_item_margin_left"/>


    <RelativeLayout
        android:id="@+id/item_parent"
        android:layout_toEndOf="@+id/list_item_margin_left"
        android:layout_width="@dimen/teamchoice_list_item_height"
        android:layout_height="@dimen/teamchoice_list_item_height"
        android:padding="5dp">
        <ImageView
            android:includeFontPadding="false"
            android:id="@+id/jersey"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:gravity="center" />
    </RelativeLayout>


    <TextView
        android:id="@+id/teamOrigin"
        android:layout_toEndOf="@+id/item_parent"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/teamchoice_list_item_height"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center_vertical"
        android:textColor="@color/textColor"/>

</RelativeLayout>