<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="@dimen/dialog_list_item_margin"
        android:layout_height="@dimen/dialog_list_item_height"
        android:layout_alignParentStart="true"
        android:id="@+id/list_item_margin_left"/>

    <RelativeLayout
        android:id="@+id/penalty_color"
        android:layout_toEndOf="@+id/list_item_margin_left"
        android:layout_width="35dp"
        android:layout_height="@dimen/dialog_list_item_height">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/item_parent"
        android:layout_toEndOf="@+id/penalty_color"
        android:layout_width="@dimen/dialog_list_item_height"
        android:layout_height="@dimen/dialog_list_item_height"
        android:padding="5dp">
        <TextView
            android:includeFontPadding="false"
            android:id="@+id/playerNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:padding="2dp"
            android:textSize="8sp"
            android:gravity="center"
            android:textColor="@color/white" />
    </RelativeLayout>


    <TextView
        android:id="@+id/playerName"
        android:layout_toEndOf="@+id/item_parent"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dialog_list_item_height"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center_vertical"
        android:textColor="@color/textColor"
        android:text="Scheibenbacher"/>

</RelativeLayout>